<odoo>
<data>

    <template id="external_layout_header2" inherit_id="account.report_invoice_document">

           <xpath expr="//table//thead//tr" position="replace">
                <!-- TODO: remove in master -->
                <t t-set="colspan" t-value="6"/>
                <th name="th_description" style="background:#a0a0a0;" class="text-center"><span style="font-size:13px;">statement/الوصف</span></th>
                <th name="th_source" style="background:#a0a0a0;" class="d-none text-center"><span style="font-size:13px;">Source Document</span></th>
                <th name="th_quantity" style="background:#a0a0a0;" class="text-center"><span style="font-size:13px;">Quantity/العدد</span></th>
                <th name="th_priceunit" style="background:#a0a0a0;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="font-size:13px;">Amount/المبلغ</span></th>
                <th name="th_price_unit" style="background:#a0a0a0;" t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                    <span style="font-size:13px;">Disc.% الخصم</span>
                    <!-- TODO: remove in master -->
                    <t t-set="colspan" t-value="colspan+1"/>
                </th>
                <th name="th_taxes" style="background:#a0a0a0;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span style="font-size:13px;">VAT 5% الضريبه</span></th>
                <th style="background:#a0a0a0;" name="th_subtotal" class="text-center">
                    <span style="font-size:13px;" groups="account.group_show_line_subtotals_tax_excluded">Total Amount/المجموع الكلي</span>
                    <span style="font-size:13px;" groups="account.group_show_line_subtotals_tax_included">Total Amount/المجموع الكلي</span>
                </th>
           </xpath>

           <xpath expr="//table//tbody" position="replace">
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td style="border: 1px solid #000000 !important;padding:5px 0 !important;" class="text-center" name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                <td style="border: 1px solid #000000 !important;padding:5px 0 !important;" class="text-center">
                                    <span t-esc="'{0:,.1f}'.format(round(line.quantity,2))"/>
                                    <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                </td>
                                <td style="border: 1px solid #000000 !important;padding:5px 0 !important;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td style="border: 1px solid #000000 !important;padding:5px 0 !important;" t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-field="line.discount"/>
                                </td>
                                <td style="border: 1px solid #000000 !important;padding:5px 0 !important;" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <t t-if="line.tax_ids">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                    </t>

                                    <t t-else="">
                                        <span>0%</span>
                                    </t>
                                </td>
                                <td style="border: 1px solid #000000 !important;padding:5px 0 !important;" class="text-center o_price_total">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-center">
                                <td colspan="99">
                                    <strong class="mr16">Subtotal/الاجمالي</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>

                    <tr class="text-right">
                        <td colspan="4" style="background:#a0a0a0;color:white;border: 1px solid #000000 !important;">

                                    <span style="font-size:13px;padding-right:10px;">Total with VAT</span>
                                    <span style="font-size:13px;">(مجموع البنود الخاضعه للضريبه):</span>

                        </td>
                        <td class="text-center" style="border: 1px solid #000000 !important;">
                            <span  style="font-size:13px;" t-esc="o.get_line_with_vat()['total_with_vat']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>

                    <tr class="text-right">
                        <td colspan="4" style="background:#a0a0a0;color:white;border: 1px solid #000000 !important;">
<!--                            <p>-->
